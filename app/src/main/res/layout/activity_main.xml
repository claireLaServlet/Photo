<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spin_choixSource"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Nombre d'images Ã  charger :"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lab_nb_img"
            android:layout_below="@+id/lab_nb_img"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/txt_nb_seekbar"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_balayerPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balayer photo" />

        <Button
            android:id="@+id/btn_affGalerie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Afficher galerie" />

        <Button
            android:id="@+id/btn_chargerImageDistante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charger Image Distante" />
    </LinearLayout>

</LinearLayout>